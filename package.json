{
  "name": "@acdh/howto",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze-bundle": "cross-env BUNDLE_ANALYZER='enabled' next build --no-lint",
    "build": "next build",
    "dev": "next dev",
    "dev:cms": "netlify-cms-proxy-server",
    "dev:content-schema": "contentlayer dev",
    "dev:search": "docker run --rm -p 8108:8108 -v/tmp/typesense-data:/data typesense/typesense:0.23.0 --data-dir /data --api-key=${TYPESENSE_ADMIN_API_KEY} --enable-cors",
    "format": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "npm run format -- --write",
    "generate": "npm run \"generate:content-schema\" && run-p \"generate:!(content-schema)\"",
    "generate:cms-preview-styles": "tailwindcss -c tailwind.config.cjs -m -o ./public/assets/css/tailwind.css",
    "generate:content-metadata": "NODE_OPTIONS=--experimental-json-modules run-ts-script --external=./.contentlayer/* scripts/generate-content-metadata",
    "generate:content-schema": "contentlayer build",
    "generate:favicons": "run-ts-script scripts/generate-favicons",
    "generate:redirects": "NODE_OPTIONS=--experimental-json-modules run-ts-script --external=./.contentlayer/* scripts/generate-redirects",
    "generate:rss-feed": "NODE_OPTIONS=--experimental-json-modules run-ts-script --external=./.contentlayer/* scripts/generate-rss-feed",
    "generate:search-index": "NODE_OPTIONS=--experimental-json-modules run-ts-script --external=./.contentlayer/* scripts/generate-search-index",
    "generate:sitemap": "NODE_OPTIONS=--experimental-json-modules run-ts-script --external=./.contentlayer/* scripts/generate-sitemap",
    "lint": "run-p lint:*:check",
    "lint:fix": "run-p lint:*:fix",
    "lint:code:check": "eslint . --cache --cache-location .next/cache/eslint/ --ext cjs,js,mjs,ts,tsx --ignore-path .gitignore",
    "lint:code:fix": "npm run lint:code:check -- --fix",
    "lint:md:check": "remark . --ext md --frail --ignore-path .gitignore --quiet",
    "lint:md:fix": "npm run lint:md:check -- --output",
    "lint:mdx:check": "remark . --ext mdx --frail --ignore-path .gitignore --quiet --use mdx",
    "lint:mdx:fix": "npm run lint:mdx:check -- --output",
    "lint:styles:check": "stylelint \"**/*.css\" --cache --cache-location .next/cache/stylelint/ --ignore-path .gitignore",
    "lint:styles:fix": "npm run lint:styles:check -- --fix",
    "postinstall": "patch-package",
    "prebuild": "npm run generate",
    "prepare": "npm run generate && simple-git-hooks || exit 0",
    "start": "next start",
    "stories:build": "build-storybook --config-dir stories --quiet",
    "stories:build:docs": "npm run stories:build --docs",
    "stories:dev": "start-storybook --config-dir stories --no-open --port 6006",
    "stories:dev:docs": "npm run stories:dev --docs",
    "test": "exit 0",
    "test:ci": "npm run test -- --ci",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "typecheck": "tsc -p ./tsconfig.json --noEmit && tsc -p ./cypress/tsconfig.json --noEmit",
    "validate": "npm run format && npm run lint && npm run typecheck && npm run test"
  },
  "engines": {
    "node": ">=16.14",
    "npm": ">=8.5"
  },
  "packageManager": "npm@8.11.0",
  "dependencies": {
    "@codemirror/lang-xml": "^6.0.0",
    "@codemirror/state": "^6.1.0",
    "@codemirror/view": "^6.0.3",
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@next/bundle-analyzer": "^12.2.3",
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/capitalize": "^1.0.2",
    "@stefanprobst/group-by": "^1.1.0",
    "@stefanprobst/is-nonempty-array": "^1.0.1",
    "@stefanprobst/is-nonempty-string": "^1.0.1",
    "@stefanprobst/key-by": "^1.0.1",
    "@stefanprobst/log": "^1.0.3",
    "@stefanprobst/next-error-boundary": "^3.0.2",
    "@stefanprobst/next-i18n": "^1.2.0",
    "@stefanprobst/next-page-metadata": "^2.0.5",
    "@stefanprobst/next-theme": "^2.0.6",
    "@stefanprobst/omit": "^1.0.0",
    "@stefanprobst/pick": "^1.0.3",
    "@stefanprobst/range": "^1.1.1",
    "@stefanprobst/remark-resource-links": "^1.0.2",
    "@stefanprobst/request": "^0.1.11",
    "clsx": "^1.2.1",
    "codemirror": "^6.0.1",
    "netlify-cms-app": "^2.15.72",
    "next": "^12.2.3",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.30.7",
    "typesense": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@headlessui/tailwindcss": "^0.1.0",
    "@mdx-js/mdx": "^2.1.2",
    "@next/eslint-plugin-next": "^12.2.3",
    "@stefanprobst/commitlint-config": "^1.0.2",
    "@stefanprobst/eslint-config-next": "^6.1.0",
    "@stefanprobst/favicons": "^2.0.4",
    "@stefanprobst/prettier-config": "^2.0.2",
    "@stefanprobst/rehype-extract-toc": "^2.2.0",
    "@stefanprobst/rehype-fragment-links": "^1.0.1",
    "@stefanprobst/rehype-image-captions": "^1.1.0",
    "@stefanprobst/rehype-lists-with-aria-role": "^1.0.1",
    "@stefanprobst/rehype-noreferrer-links": "^1.0.2",
    "@stefanprobst/remark-mdx-next-images": "^1.2.0",
    "@stefanprobst/remark-smart-quotes": "^1.0.2",
    "@stefanprobst/stylelint-config": "^2.3.1",
    "@stefanprobst/ts-script": "^2.1.0",
    "@stefanprobst/tsconfig": "^2.1.0",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/mdx2-csf": "^0.0.3",
    "@storybook/react": "^6.5.9",
    "@tailwindcss/forms": "^0.5.2",
    "@types/escape-html": "^1.0.2",
    "@types/node": "^18.0.3",
    "@types/nprogress": "^0.2.0",
    "@types/prettier": "^2.6.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/sharp": "^0.30.4",
    "@types/webpack": "^5.28.0",
    "@wooorm/starry-night": "^1.1.0",
    "autoprefixer": "^10.4.7",
    "contentlayer": "^0.2.6",
    "cross-env": "^7.0.3",
    "escape-html": "^1.0.3",
    "eslint": "^8.19.0",
    "eslint-plugin-storybook": "^0.6.0",
    "hast-util-heading-rank": "^2.1.0",
    "hastscript": "^7.0.2",
    "json5": "^2.2.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.43.1",
    "msw-storybook-addon": "^1.6.3",
    "netlify-cms-proxy-server": "^1.3.24",
    "next-contentlayer": "^0.2.6",
    "npm-run-all": "^4.1.5",
    "parse-numeric-range": "^1.3.0",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.14",
    "postcss-custom-media": "^8.0.2",
    "postcss-nesting": "^10.1.10",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.12",
    "rehype-slug": "^5.0.1",
    "remark": "^14.0.2",
    "remark-cli": "^11.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-mdx": "^2.1.2",
    "remark-retext": "^5.0.1",
    "remark-slug": "^7.0.1",
    "retext-english": "^4.1.0",
    "retext-latin": "^3.1.0",
    "simple-git-hooks": "^2.8.0",
    "strip-markdown": "^5.0.0",
    "stylelint": "^14.9.1",
    "tailwindcss": "^3.1.5",
    "typescript": "^4.7.4",
    "unist-util-visit": "^4.1.0",
    "vfile": "^5.3.4",
    "vfile-matter": "^4.0.0",
    "xast-util-feed": "^1.2.0",
    "xast-util-sitemap": "^1.3.0",
    "xast-util-to-xml": "^3.0.0"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">=0.75%",
      "not dead",
      "not op_mini all"
    ]
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@stefanprobst/eslint-config-next",
    "rules": {
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "contentlayer/generated",
            "contentlayer/source-files",
            "next-contentlayer/hooks"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.stories.tsx"
        ],
        "extends": [
          "plugin:storybook/recommended"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.@(cjs|js|mjs|ts|tsx)": [
      "eslint --cache --cache-location .next/cache/eslint/ --fix",
      "prettier --cache --write"
    ],
    "*.css": [
      "stylelint --cache --cache-location .next/cache/stylelint/ --fix",
      "prettier --cache --write"
    ],
    "*.@(json|md|mdx|yml)": "prettier --cache --write",
    "*.md": [
      "remark --quiet",
      "prettier --cache --write"
    ],
    "*.mdx": [
      "remark --quiet --use mdx",
      "prettier --cache --write"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "postcss": {
    "plugins": {
      "postcss-custom-media": {},
      "tailwindcss/nesting": "postcss-nesting",
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": "@stefanprobst/prettier-config",
  "remarkConfig": {
    "plugins": [
      "remark-frontmatter",
      "remark-gfm",
      [
        "remark-lint-no-dead-urls",
        {
          "skipLocalhost": true
        }
      ]
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run validate"
  },
  "stylelint": {
    "extends": "@stefanprobst/stylelint-config",
    "rules": {
      "function-no-unknown": [
        true,
        {
          "ignoreFunctions": [
            "theme"
          ]
        }
      ]
    }
  }
}
