{
  "extends": "@stefanprobst/tsconfig",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "contentlayer/generated": ["./.contentlayer/generated"],
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": [
    "app.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.config.mjs",
    "**/*.config.cjs",
    "stories/main.cjs",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules", "cypress", "out", "storybook-static"]
}
